@model AgendaTelefonica.Models.Telefono

@{
    ViewData["Title"] = "Modificar Teléfono";
}

<h1 class="text-light">Modificar Teléfono</h1>

<h4 class="text-light">Teléfono</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTelefono" />
            <div class="form-group">
                @Html.LabelFor(m => m.IdContacto, "Contacto", new { @class = "control-label text-light" })<br />
                @Html.DropDownList("IdContacto", (IEnumerable<SelectListItem>)ViewBag.IdContacto, "Seleccionar Contacto", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IdCompania, "Compañia Telefónica", new { @class = "control-label text-light" })<br />
                @Html.DropDownList("IdCompania", (IEnumerable<SelectListItem>)ViewBag.IdTelefono, "Seleccionar Empresa", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="CodigoArea" class="control-label text-light"></label>
                <input asp-for="CodigoArea" class="form-control" />
                <span asp-validation-for="CodigoArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prefijo" class="control-label text-light"></label>
                <input asp-for="Prefijo" class="form-control" />
                <span asp-validation-for="Prefijo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label text-light"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
