@model AgendaTelefonica.Models.Direccion

@{
    ViewData["Title"] = "Editar Dirección";
}

<h1 class="text-light">Modificar Dirección</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDireccion" />
            <div class="form-group">
                @Html.LabelFor(m => m.IdContacto, "Contacto", new { @class = "control-label text-light" })<br />
                @Html.DropDownList("IdContacto", (IEnumerable<SelectListItem>)ViewBag.IdContacto, "Seleccionar Contacto", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Calle" class="control-label text-light"></label>
                <input asp-for="Calle" class="form-control" />
                <span asp-validation-for="Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlturaCalle" class="control-label text-light"></label>
                <input asp-for="AlturaCalle" class="form-control" />
                <span asp-validation-for="AlturaCalle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label text-light"></label>
                <input asp-for="CodigoPostal" class="form-control" />
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localidad" class="control-label text-light"></label>
                <input asp-for="Localidad" class="form-control" />
                <span asp-validation-for="Localidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provincia" class="control-label text-light"></label>
                <input asp-for="Provincia" class="form-control" />
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
